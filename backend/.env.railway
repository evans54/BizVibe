# Railway Environment Variables for Backend
NODE_ENV=production
PORT=4000

# Database (Railway will provide these)
DATABASE_URL=postgresql://user:password@host:port/database
REDIS_URL=redis://host:port

# Security (Generate new ones for production)
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# Optional APIs
SERP_API_KEY=your-serp-api-key
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_SMS_NUMBER=your-twilio-number
GOOGLE_GBP_API_KEY=your-google-api-key

# SMTP (Optional)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=your-email@example.com
SMTP_SECURE=false

# App Configuration
APP_BASE_URL=https://your-frontend-name.railway.app
BACKUP_DIRECTORY=./backups
BACKUP_CRON=0 2 * * *
